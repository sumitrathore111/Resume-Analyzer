# Environment Configuration Template
# Copy this file to .env and configure your settings

# Application Settings
APP_NAME=Resume Screening AI
VERSION=1.0.0
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,http://127.0.0.1:8501

# ML Model Settings
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.5

# Scoring Weights (must sum to 1.0)
SEMANTIC_SCORE_WEIGHT=0.4
SKILL_MATCH_WEIGHT=0.35
EXPERIENCE_WEIGHT=0.15
EDUCATION_WEIGHT=0.10

# File Upload Settings
MAX_FILE_SIZE=10485760
MAX_FILES=50

# Database Configuration
DATABASE_URL=sqlite:///resume_screening.db
# For PostgreSQL: postgresql://user:password@localhost:5432/resume_db

# Logging
LOG_LEVEL=INFO
